<hazelcast xmlns="http://www.hazelcast.com/schema/config"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.hazelcast.com/schema/config
           http://www.hazelcast.com/schema/config/hazelcast-config-4.0.xsd">
  <import resource="classpath:cache-config/hazelcast-common.xml"/>
  <import resource="classpath:cache-config/hazelcast-map.xml"/>

  <cluster-name>local-hz-cluster</cluster-name>

  <network>
    <port port-count="3">5701</port>
    <!--<outbound-ports>
        <ports>0</ports>
    </outbound-ports>-->
    <join>
      <multicast enabled="false"/>
      <tcp-ip enabled="true">
        <interface>127.0.0.1</interface>
        <member-list>
          <member>127.0.0.1</member>
        </member-list>
      </tcp-ip>
    </join>
  </network>

  <metrics enabled="true">
    <management-center enabled="true">
      <retention-seconds>5</retention-seconds>
    </management-center>
    <jmx enabled="false"/>
  </metrics>
  <management-center scripting-enabled="true">http://${hz.mgmt.host}:8080/hazelcast-mancenter
  </management-center>
</hazelcast>